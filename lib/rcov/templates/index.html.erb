<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang='en' xml:lang='en' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <title><%= page_title %></title>
    <link href="screen.css" media="all" rel="stylesheet" type="text/css" />
    <link href="print.css" media="print" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="jquery-1.3.2.min.js"></script>
    <script type="text/javascript" src="jquery.tablesorter.min.js"></script>
    <script type="text/javascript" src="rcov.js"></script>
  </head>
  <body>
    <h1><%= page_title %></h1>
    <% if output_threshold != 101 %>
      <!-- Note: 101 is the default threshold if you don't enter one -->
      <p>Threshold: <%= output_threshold %>%</p>
    <% end %>

    <div class="filters">
      <fieldset>
        <label>File Filter:</label>
        <select id="file_filter" onchange="v=$('#file_filter').val();$('tr.files').hide();$('tr.' + v).show();">
          <option value="all">Show All</option>
          <% files.map{|f| f.name.split('/')[0..-2]}.flatten.uniq.sort.each do |f| %>
            <option value="<%= f %>"><%= f %>/</option>
          <% end %>
        </select>
      </fieldset>
      <fieldset>
        <label>Coverage Threshold:</label>
        <select id="coverage_filter" onchange="v=$('#coverage_filter').val();$('tr.files').hide();$('tr.' + v).show();">
          <option value="all">Show All</option>
          <option value="9">&lt; 10% Coverage</option>
          <option value="19">&lt; 20% Coverage</option>
          <option value="29">&lt; 30% Coverage</option>
          <option value="39">&lt; 40% Coverage</option>
          <option value="49">&lt; 50% Coverage</option>
          <option value="59">&lt; 60% Coverage</option>
          <option value="69">&lt; 70% Coverage</option>
          <option value="79">&lt; 80% Coverage</option>
          <option value="89">&lt; 90% Coverage</option>
          <option value="99">&lt; 100% Coverage</option>
          <option value="101">= 100% Coverage</option>
        </select>
      </fieldset>
    </div>
    
    <table class='report' id='report_table'>
      <thead>
        <tr>
          <th class="left_align">Name</th>
          <th class="right_align">Total Lines</th>
          <th class="right_align">Lines of Code</th>
          <th class="left_align">Total Coverage</th>
          <th class="left_align">Code Coverage</th>
        </tr>
      </thead>
      <% files.each_with_index do |f,i| %>
        <% if i == 0 %>
          <tfoot>
        <% elsif i == 1 %>
          <tbody>
        <% end %>
            <tr class="<%= i > 0 ? 'files ' : '' %>all <%= f.name.split('/')[0..-2] * " " %>">
              <td class="left_align"><%= f.name == 'TOTAL' ? f.name : %{<a href="#{relative_filename(f.name)}">#{f.name}</a>} %></td>
              <td class='right_align'><tt><%= f.num_lines %></tt></td>
              <td class='right_align'><tt><%= f.num_code_lines %></tt></td>
              <td class="left_align">
                <div class="percent_graph_legend">
                  <tt><%= "%3.2f" % f.total_coverage_for_report %>%</tt>
                </div>
                <div class="percent_graph">
                  <div class="covered" style="width:<%= f.total_coverage_for_report.round %>px"></div>
                  <div class="uncovered" style="width:<%= 100 - f.total_coverage_for_report.round %>px"></div>
                </div>
              </td>
              <td class="left_align">
                <div class="percent_graph_legend">
                  <tt><%= "%3.2f" % f.code_coverage_for_report %>%</tt>
                </div>
                <div class="percent_graph">
                  <div class="covered" style="width:<%= f.code_coverage_for_report.round %>px"></div>
                  <div class="uncovered" style="width:<%= 100 - f.code_coverage_for_report.round %>px"></div>
                </div>
              </td>
            </tr>
        <% if i == 0 %>
          </tfoot>
        <% end %>
      <% end %>
      </tbody>
    </table>

    <p>Generated on <%= generated_on %> with <a href="<%= rcov::UPSTREAM_URL %>">rcov <%= rcov::VERSION %></a></p>

    <script type="text/javascript">
      $(document).ready(function(){$("#report_table").tablesorter({widgets: ['zebra'], textExtraction: 'complex'});});
    </script>

  </body>
</html>
